.container{
    width 100%
    height 100%
    display flex
    justify-content start
    align-items center
    flex-wrap wrap
    overflow: scroll

    .roleItem{
        // max-width: calc(50% - 60px);
        width: calc(33.3% - 100px);
        margin: 50px;
        height 340px;
        border-radius: 15px;
        box-shadow: 0px 0px 10px #555555;
        background-color: #ffffff;
        position relative
        

        .closeImg{
            position absolute;
            top:5px;
            right 15px;
            width: 25px;
            transition:transform 0.5s;
        }
        .closeImg:hover{
            /* Rotate div */
            transform:rotate(180deg);
            -ms-transform:rotate(180deg); /* Internet Explorer */
            -moz-transform:rotate(180deg); /* Firefox */
            -webkit-transform:rotate(180deg); /* Safari 和 Chrome */
            -o-transform:rotate(180deg); /* Opera */    
        }

        .role{
            margin: 20px auto;
            display flex
            justify-content center
            align-items center
            flex-direction column

            .roleImg{
                width: 140px;
                height 140px;
                border-radius: 50%;
                box-shadow:0px 0px 5px #555555;

            }
            .roleName{
                font-weight bold
                text-align: center;
                font-size 20px;
                line-height: 40px;

            }
        } 
        .roleDescription{
            height 100px;
            margin: 20px;
            line-height: 20px;
            font-size: 16px;
            overflow-y: scroll;
            // overflow: -moz-scrollbars-none;
        }
        .roleDescription::-webkit-scrollbar{
            display: none;
        }
    }

    .roleItem:hover{
        box-shadow: 0px 0px 15px #555555;
    }

    .add{
        width: calc(33.3% - 100px);
        margin: 50px;
        height 340px;
        border-radius: 15px;
        box-shadow: 0px 0px 10px #555555;
        background-color: #ffffff;
        display flex
        justify-content center
        align-items center
        transition:all 0.5s;

        .addImg{
            width 30%
            transition:transform 0.5s;
            // height 70%
        }
    }
    .add:hover{
        box-shadow: 0px 0px 15px #555555;
        .addImg{
             transform:rotate(180deg) scale(1.5);
            -ms-transform:rotate(180deg) scale(1.5); /* Internet Explorer */
            -moz-transform:rotate(180deg) scale(1.5); /* Firefox */
            -webkit-transform:rotate(180deg) scale(1.5); /* Safari 和 Chrome */
            -o-transform:rotate(180deg) scale(1.5); /* Opera */    
        }  
    }
}